{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "rootDir": "./src",
    "noImplicitAny": false,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
